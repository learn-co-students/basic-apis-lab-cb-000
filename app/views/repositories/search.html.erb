<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @error %>
    <%= content_tag :p, @error %>
  <% elsif @repositories %>
    <ul>
      <% @repositories.each do |repo| %>
        <li>
            <%= repo[:name] %><br>
            <%= link_to repo[:url], repo[:url] %><br>
            <%= repo[:owner] %><br>
            <%= repo[:description] %><br>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
