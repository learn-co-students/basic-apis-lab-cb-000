<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <%= @error %>
  <% else %>
    <ul>
    <% if @items_array %>
    <% @items_array.each do |item| %>
      <li>
        <%= item["name"] %><br>
        <%= link_to  item['html_url'], item["html_url"] %><br>
        <%= item["description"] %>
      </li>
      <br/>
    <% end %>
    <% end %>
    </ul>
  <% end %>
</div>
